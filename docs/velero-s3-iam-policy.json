{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "VaultSnapshotBucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": "arn:aws:s3:::charlie-velero-backups/vault-snapshots/*"
    },
    {
      "Sid": "VaultSnapshotListBucket",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::charlie-velero-backups"
    }
  ]
}
